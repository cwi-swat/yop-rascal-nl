recept veelhoek met aantal, lengte {
    herhaal aantal {
        vooruit lengte
        links 360 / aantal
    }
}  

i = 100

herhaal 2 {
    herhaal 6 {
        doe veelhoek met 6, 40
        pen kleur meng 
            random i delen rood met
            random 100 - i delen blauw met
            random 50 delen transparant
        links 60
    }
    i = i - 50
}